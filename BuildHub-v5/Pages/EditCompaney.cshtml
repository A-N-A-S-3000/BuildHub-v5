@page
@model BuildHub_v5.Pages.EditCompaneyModel
@{
    ViewData["Title"] = "Edit Company";
}

<form method="post" class="mt-4">

    <input type="hidden" name="Id" value="@Model.companyvalue.Id" />


    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="Name" value="@Model.companyvalue.Name" />
    </div>


    <div class="mb-3">
        <label class="form-label">Type</label>
        <select class="form-control" name="Type">
            <option value="">-- Select Type --</option>

            @foreach (var option in new[] { "broker", "Consultant", "decoration" })
            {
                if (Model.companyvalue.Type == option)
                {
                    <option value="@option" selected>@option</option>
                }
                else
                {
                    <option value="@option">@option</option>
                }
            }
        </select>
    </div>


    <div class="mb-3">
        <label class="form-label">Tier</label>
        <select class="form-control" name="Tier">
            <option value="">-- Select Tier --</option>

            @foreach (var option in new[] { "excellent", "good", "standard" })
            {
                if (Model.companyvalue.Tier == option)
                {
                    <option value="@option" selected>@option</option>
                }
                else
                {
                    <option value="@option">@option</option>
                }
            }
        </select>
    </div>


    <div class="mb-3">
        <label class="form-label">User ID</label>
        <input type="text" class="form-control" name="userId" value="@Model.companyvalue.UserId" />
    </div>

    <!-- Save Button -->
    <button type="submit" class="btn btn-success mt-2">Save</button>

</form>
